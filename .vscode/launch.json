    // To use Microsoft MSVC Debuger with Attach to blender PID
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "14164", // Blender PID to be attached to debuger
            "symbolSearchPath": "${workspaceFolder}"
        }
    ]

